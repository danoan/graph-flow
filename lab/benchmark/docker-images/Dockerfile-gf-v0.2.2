#Use an official Python runtime as a parent image
FROM graphflow:dgtal-0.9.4

# Set the working directory to /graph-flow
WORKDIR /graph-flow

RUN bash /graph-flow/scripts/install-graph-flow.sh v0.2.2

# Copy docker-last-layer-scripts at /graph-flow/scripts
COPY /docker-container-scripts /graph-flow/scripts

RUN chmod +x /graph-flow/scripts/*